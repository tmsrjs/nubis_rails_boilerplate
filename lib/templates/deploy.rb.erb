require "bundler/capistrano"

load "config/recipes/base"
load "config/recipes/nginx"
load "config/recipes/unicorn"
load "config/recipes/mysql"
load "config/recipes/rbenv"
load "config/recipes/check"
load "config/recipes/nodejs"

server "<%= server_ip %>", :web, :app, :db, primary: true

set :mysql_database, "<%= mysql_database %>"
set :mysql_username, "<%= mysql_username %>"
set :mysql_host, "<%= mysql_username %>"

set :user, "ubuntu"
set :application, "<%= application_name %>"
set :deploy_to, "/home/#{user}/apps/#{application}"
set :deploy_via, :remote_cache
set :use_sudo, false

set :scm, "git"
set :repository, "git@github.com:nubis/<%= application_name %>.git"
set :branch, "master"
set :keep_releases, 2

ssh_options[:keys] = File.expand_path('../../foundry.pem', __FILE__)
default_run_options[:pty] = true
ssh_options[:forward_agent] = true

after "deploy", "deploy:cleanup" # keep only the last 5 releases
